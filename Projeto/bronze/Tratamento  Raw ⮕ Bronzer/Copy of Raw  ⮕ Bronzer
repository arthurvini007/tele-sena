n","    reader = PdfReader(pdf_file)\n","    text = \"\"\n","\n","    # Extraindo texto do PDF\n","    for page in reader.pages:\n","        text += page.extract_text()\n","\n","    # Escrevendo o texto em um CSV\n","    with open(csv_file, 'w', newline='', encoding='utf-8') as f:\n","        writer = csv.writer(f)\n","        for line in text.split('\\n'):\n","            writer.writerow([line])\n","\n","# Função para copiar CSV\n","def copy_csv(original_csv, destination_csv):\n","    df = pd.read_csv(original_csv)\n","    df.to_csv(destination_csv, index=False)\n","\n","# Função para processar os arquivos de uma pasta\n","def process_folder(input_folder, output_folder):\n","    for root, _, files in os.walk(input_folder):\n","        for file in files:\n","            file_path = os.path.join(root, file)\n","            file_name, file_extension = os.path.splitext(file)\n","\n","            relative_path = os.path.relpath(root, input_folder)\n","            output_dir = os.path.join(output_folder, relative_path)\n","            os.makedirs(output_dir, exist_ok=True)\n","\n","            output_csv = os.path.join(output_dir, file_name + '.csv')\n","\n","            if file_extension.lower() == '.json':\n","                json_to_csv(file_path, output_csv)\n","            elif file_extension.lower() == '.pdf':\n","                pdf_to_csv(file_path, output_csv)\n","            elif file_extension.lower() == '.csv':\n","                copy_csv(file_path, output_csv)\n","            else:\n","                print(f\"Formato de arquivo não suportado: {file_extension}\")\n","\n","# Pastas de entrada e saída\n","input_folder = '/content/drive/MyDrive/Raw'\n","output_folder = '/content/drive/MyDrive/Bronze'\n","\n","# Processar a pasta\n","process_folder(input_folder, output_folder)\n"],"metadata":{"id":"gID4IiqEQ4I2","executionInfo":{"status":"ok","timestamp":1724506299600,"user_tz":180,"elapsed":1688,"user":{"displayName":"galerinha do obs","userId":"09205778085488